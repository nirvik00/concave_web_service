{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}

<div class="card card-body">
  <h4>Edit Project Fields</h4>
  <form action="/projects/{{project.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="projname">Name</label>
      <input type="text" class="form-control" name="projname" value="{{project.projname}}" required>
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" name="description" required> {{project.description}} </textarea>
    </div>    
    <div class="form-group">
      <label for="details">Details</label>
      <textarea class="form-control" name="details" required> {{project.details}} </textarea>
    </div>
    <button type="submit" class="btn">Submit</button>
  </form>
</div>